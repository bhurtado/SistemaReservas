@model SistemaReservas.Models.ReservaViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Reserva", FormMethod.Post,
    new { @id = "frm-reserva" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ReservaViewModel</legend>
        @Html.DropDownListFor(x=>x.Reserva.NumeroVueloID,
        new SelectList(Model.Vuelos, "ID","Nombre"), null,
        new {@class ="form-control"})
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
